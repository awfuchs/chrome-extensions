{
  "name": "MarkWack",
  "action": {},
  "description": "Produce some Markov-chain random prose based on the content of the current page.",
  "version": "0.6",
  "manifest_version": 3,
  "options_page": "options.html",
  "icons": {
    "16": "/images/mw-logo-16.png",
    "48": "/images/mw-logo-48.png",
    "128": "/images/mw-logo-128.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  }
}

